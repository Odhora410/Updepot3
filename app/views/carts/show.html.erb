<p id="notice" class="w3-panel"><%= notice %></p>

<div class="w3-panel w3-aqua">

<table class="w3-table-all">
<thead>
  <tr>
    <th><h1>cart</h1></th>
    <th></th>
  </tr>
</thead>
<tbody>
<tr>
  
    <% @cart.line_items.each do |item| %>
    <tr><td><%= item.quantity %> &times; <%= item.product.title %></td><td></td></tr>
  <% end %>

<tr>
<td>
<%= link_to 'Edit', edit_cart_path(@cart) ,class:"w3-button w3-light-gray" %> |
<%= link_to 'Back', carts_path , class:"w3-button w3-light-gray" %>
</td>
</tr>
</tbody>
<%= button_to "Checkout", new_order_path, method: :get %>
<%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' } %>
<br>
<br>
<%= button_to 'Keep Shopping', store_index_url , class:"btn btn-primary" %>
</table>
</div>